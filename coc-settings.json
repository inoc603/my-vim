{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["-remote=auto"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "experimentalWorkspaceModule": true,
        "memoryMode": "DegradeClosed"
      },
      "filetypes": ["go"]
    },
    "elmLS": {
      "trace.server": "messages",
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmFormatPath": "/root/bin/elm-format",
        "elmAnalyseTrigger": "change"
      }
    }
  },
  "typescript.preferences.noSemicolons": true,
  "tsserver.npm": "/root/.nvm/versions/node/v12.6.0/bin/npm",
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "css",
    "javascript",
    "rust",
    "python"
  ],
  "emmet.includeLanguages": {
    "typescript": "typescriptreact"
  },
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.zinit/plugins/pyenv---pyenv/versions/neovim/bin/black",
  "python.formatting.blackArgs": []
}
