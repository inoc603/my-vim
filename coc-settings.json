{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  },
  "typescript.preferences.noSemicolons": true,
  "tsserver.npm": "/root/.nvm/versions/node/v12.6.0/bin/npm",
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "css",
    "javascript"
  ],
  "emmet.includeLanguages": {
    "typescript": "typescriptreact"
  }
}
